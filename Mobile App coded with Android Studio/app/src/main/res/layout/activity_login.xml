<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/lrt2"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ce0a1223">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/logo2"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="50dp"
                android:layout_height="75dp" />

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textColor="#fff"
                android:layout_marginBottom="20dp"
                android:textSize="16sp"
                android:text="Please login your credentials to continue."
                android:layout_height="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:background="#74ffffff"
                android:hint="Username"
                android:paddingLeft="20dp"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"
                android:drawableStart="@drawable/ic_assignment_ind_black_24dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/username"
                android:textColorHint="#1b2d4e"
                android:textColor="#FFF"
                android:layout_height="70dp" />

            <EditText
                android:layout_width="match_parent"
                android:background="#74ffffff"
                android:hint="Password"
                android:paddingLeft="20dp"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/lock"
                android:id="@+id/password"
                android:drawableLeft="@drawable/lock"
                android:paddingRight="20dp"
                android:textColorHint="#1b2d4e"
                android:textColor="#FFF"
                android:layout_marginBottom="1dp"
                android:layout_height="70dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="login"
                    android:gravity="center"
                    android:background="#9d36558e">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:textColor="#FFF"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:background="#9d36558e">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login as Guest"
                        android:textColor="#FFF"/>
                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/logo1"
                android:layout_marginBottom="70dp"
                android:layout_marginTop="20dp"
                android:layout_height="60dp" />
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textSize="14dp"
                android:textColor="#fff"
                android:text="Don't have an account? Register here."
                android:layout_height="20dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>